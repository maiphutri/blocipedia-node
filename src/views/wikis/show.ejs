<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  <% include ../static/partials/navbar.ejs %>

  <main class='container'>

    <% include ../static/partials/messages.ejs %>

    <h1><%= wiki.title %></h1>

    <% if (currentUser) { %>
      <% if (currentUser.id === wiki.userId || currentUser.isAdmin()) { %>

        <form action="/wikis/<%= wiki.id %>/destroy" method="post">
    
          <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
    
          <button type='button' class='btn btn-danger' data-toggle="modal" data-target="#Modal">Delete</button>
    
          <!--Modal -->
          <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="ModalLabel">Delete Wiki</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete this <strong><%= wiki.title %></strong> wiki?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                  <button type="sumit" class="btn btn-primary">Yes</button>
                </div>
              </div>
            </div>
          </div>
        </form>
        
      <% } %>
    <% } %>

    <p><%= wiki.body %></p>

  </main>

  <% include ../static/partials/baseScripts.ejs %>
</body>
</html>